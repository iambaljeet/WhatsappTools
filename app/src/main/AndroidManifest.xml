<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.whatsapptools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivities.DrawerActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".StoryDownloader.StoryDownloaderActivity"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation|keyboardHidden|screenLayout|screenSize"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".TextRepeater.Activities.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".TextRepeater.Activities.RecentActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".TextRepeater.Activities.ShareActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".NoNumberMessage.Activities.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppThemeNoBar" />
        <activity
            android:name=".NoNumberMessage.Activities.SavedNumbersActivity"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>